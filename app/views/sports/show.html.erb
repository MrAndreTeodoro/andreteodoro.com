<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Back Button -->
  <div class="mb-8">
    <%= link_to sports_path, class: "inline-flex items-center text-black hover:underline font-bold" do %>
      <svg
        class="w-5 h-5 mr-2"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 19l-7-7m0 0l7-7m-7 7h18"
        />
      </svg>
      Back to All Sports
    <% end %>
  </div>

  <!-- Page Title -->
  <div class="mb-12 border-b-2 border-black pb-6">
    <h1 class="text-5xl md:text-6xl font-bold text-black mb-4">
      <% case @sport_type %>
      <% when 'crossfit' %>
        ğŸ‹ï¸ CrossFit
      <% when 'hyrox' %>
        âš¡ Hyrox
      <% when 'running' %>
        ğŸƒ Running
      <% end %>
    </h1>

    <p class="text-xl text-black font-semibold">
      <% case @sport_type %>
      <% when 'crossfit' %>
        Constantly varied, high-intensity functional movements. Building strength and conditioning through the sport of fitness.
      <% when 'hyrox' %>
        The fitness race for every body. 8km of running combined with 8 workout stations testing strength and endurance.
      <% when 'running' %>
        From 5Ks to marathons, tracking progress one mile at a time.
      <% when 'ocr' %>
        Obstacle Course Racing - combining running with challenging obstacles.
      <% end %>
    </p>
  </div>

  <!-- Benchmarks Section -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-black mb-8 border-b-2 border-black pb-3">Benchmarks</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @benchmarks.each do |benchmark| %>
        <div class="bg-eggwhite border-2 border-black p-6 hover:bg-eggwhite-dark">
          <% if benchmark.run_type_badge.present? %>
            <div class="flex items-center gap-2 mb-3">
              <span class="text-lg"><%= benchmark.run_type_emoji %></span>
              <span class="px-2 py-1 bg-black text-eggwhite text-xs font-bold uppercase border-2 border-black">
                <%= benchmark.run_type_badge %>
              </span>
            </div>
          <% end %>

          <h3 class="text-xl font-bold text-black mb-3">
            <%= benchmark.title %>
          </h3>

          <div class="flex items-baseline space-x-2 mb-4">
            <span class="text-4xl font-bold text-black">
              <%= benchmark.value %>
            </span>

            <% if benchmark.unit.present? %>
              <span class="text-black text-lg font-semibold"><%= benchmark.unit %></span>
            <% end %>
          </div>

          <% if benchmark.description.present? %>
            <div class="text-black text-sm prose max-w-none">
              <%= benchmark.description %>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if @benchmarks.empty? %>
        <div class="col-span-full bg-eggwhite border-2 border-black p-8 text-center">
          <p class="text-black font-semibold">No benchmarks recorded yet.</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Personal Records Section -->
  <% if @personal_records.any? %>
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-black mb-8 border-b-2 border-black pb-3">ğŸ† Personal Records</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% @personal_records.each do |pr| %>
          <div class="bg-yellow-200 border-2 border-black p-6 hover:bg-yellow-300">
            <% if pr.run_type_badge.present? %>
              <div class="flex items-center gap-2 mb-2">
                <span class="text-lg"><%= pr.run_type_emoji %></span>
                <span class="px-2 py-1 bg-black text-eggwhite text-xs font-bold uppercase border-2 border-black">
                  <%= pr.run_type_badge %>
                </span>
              </div>
            <% end %>

            <div class="flex items-start justify-between mb-3">
              <div>
                <h3 class="text-xl font-bold text-black mb-1">
                  <%= pr.title %>
                </h3>

                <% if pr.date %>
                  <p class="text-sm text-black font-semibold">
                    <%= pr.date.strftime("%B %d, %Y") %>
                  </p>
                <% end %>
              </div>

              <span class="text-3xl">ğŸ†</span>
            </div>

            <div class="flex items-baseline space-x-2 mb-3">
              <span class="text-3xl font-bold text-black">
                <%= pr.value %>
              </span>

              <% if pr.unit.present? %>
                <span class="text-black text-lg font-semibold"><%= pr.unit %></span>
              <% end %>
            </div>

            <% if pr.description.present? %>
              <div class="text-black text-sm prose max-w-none">
                <%= pr.description %>
              </div>
            <% end %>

            <% if pr.location.present? %>
              <p class="text-black text-xs mt-2 font-semibold">ğŸ“ <%= pr.location %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- Recent Workouts Section -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-black mb-8 border-b-2 border-black pb-3">Recent Workouts</h2>

    <div class="space-y-4">
      <% @workouts.each do |workout| %>
        <div class="bg-eggwhite border-2 border-black p-6 hover:bg-eggwhite-dark">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <% if workout.run_type_emoji.present? %>
                  <span class="text-xl"><%= workout.run_type_emoji %></span>
                <% end %>

                <% if workout.date %>
                  <span class="text-sm text-black font-semibold">
                    <%= workout.date.strftime("%B %d, %Y") %>
                  </span>
                <% end %>

                <% if workout.personal_record %>
                  <span class="px-2 py-1 bg-yellow-300 text-black text-xs font-bold uppercase border-2 border-black flex items-center">
                    ğŸ† PR
                  </span>
                <% end %>
              </div>

              <h3 class="text-xl font-bold text-black mb-2">
                <%= workout.title %>
              </h3>

              <% if workout.description.present? %>
                <div class="text-black text-sm mb-3 prose max-w-none">
                  <%= workout.description %>
                </div>
              <% end %>

              <% if workout.location.present? %>
                <p class="text-black text-sm font-semibold">ğŸ“ <%= workout.location %></p>
              <% end %>

              <% if workout.result_url.present? %>
                <a
                  href="<%= workout.result_url %>"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-black hover:underline font-bold text-sm mt-2 border-2 border-black px-3 py-1 bg-eggwhite hover:bg-black hover:text-eggwhite"
                >
                  View Details â†’
                </a>
              <% end %>
            </div>

            <div class="text-right ml-4">
              <p class="text-3xl font-bold text-black">
                <%= workout.formatted_value %>
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <% if @workouts.empty? %>
        <div class="bg-eggwhite border-2 border-black p-8 text-center">
          <p class="text-black font-semibold">No workouts recorded yet.</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Upcoming Events Section -->
  <% if @upcoming_events.any? %>
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-black mb-8 border-b-2 border-black pb-3">ğŸ“… Upcoming Events</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @upcoming_events.each do |event| %>
          <div class="bg-eggwhite border-2 border-black p-6 hover:bg-eggwhite-dark">
            <% if event.run_type_badge.present? %>
              <div class="flex items-center gap-2 mb-3">
                <span class="text-lg"><%= event.run_type_emoji %></span>
                <span class="px-2 py-1 bg-black text-eggwhite text-xs font-bold uppercase border-2 border-black">
                  <%= event.run_type_badge %>
                </span>
              </div>
            <% end %>

            <div class="mb-4">
              <% if event.date %>
                <div class="flex items-center space-x-2 mb-2">
                  <span class="px-2 py-1 bg-black text-eggwhite text-xs font-bold uppercase border-2 border-black">
                    <%= event.date.strftime("%b %d, %Y") %>
                  </span>
                </div>
              <% end %>

              <h4 class="text-lg font-bold text-black mt-2">
                <%= event.title %>
              </h4>
            </div>

            <% if event.location.present? %>
              <p class="text-black text-sm font-semibold mb-2">ğŸ“ <%= event.location %></p>
            <% end %>

            <% if event.description.present? %>
              <div class="text-black text-sm prose max-w-none">
                <%= event.description %>
              </div>
            <% end %>

            <% if event.result_url.present? %>
              <a
                href="<%= event.result_url %>"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-black hover:underline font-bold text-sm mt-3 border-2 border-black px-3 py-1 bg-eggwhite hover:bg-black hover:text-eggwhite"
              >
                Event Details â†’
              </a>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  <% else %>
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-black mb-8 border-b-2 border-black pb-3">ğŸ“… Upcoming Events</h2>

      <div class="bg-eggwhite border-2 border-black p-8 text-center">
        <p class="text-black font-semibold">No upcoming events scheduled.</p>
      </div>
    </section>
  <% end %>

  <!-- Past Activities Section -->
  <% if @past_activities.any? %>
    <section>
      <h2 class="text-3xl font-bold text-black mb-8 border-b-2 border-black pb-3">Past Activities</h2>

      <div class="space-y-4">
        <% @past_activities.each do |activity| %>
          <div class="bg-eggwhite border-2 border-black p-6 hover:bg-eggwhite-dark">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <% if activity.run_type_emoji.present? %>
                    <span class="text-xl"><%= activity.run_type_emoji %></span>
                  <% end %>

                  <span class="px-2 py-1 bg-black text-eggwhite text-xs font-bold uppercase border-2 border-black">
                    <%= activity.category_display_name %>
                  </span>

                  <% if activity.personal_record %>
                    <span class="px-2 py-1 bg-yellow-300 text-black text-xs font-bold uppercase border-2 border-black">
                      ğŸ† PR
                    </span>
                  <% end %>
                </div>

                <h3 class="text-xl font-bold text-black mb-2">
                  <%= activity.title %>
                </h3>

                <% if activity.description.present? %>
                  <div class="text-black text-sm mb-3 prose max-w-none">
                    <%= activity.description %>
                  </div>
                <% end %>

                <div class="flex items-center gap-4 text-sm text-black font-semibold">
                  <span><%= activity.date.strftime("%B %d, %Y") %></span>

                  <% if activity.location.present? %>
                    <span>ğŸ“ <%= activity.location %></span>
                  <% end %>
                </div>
              </div>

              <div class="text-right ml-4">
                <p class="text-3xl font-bold text-black">
                  <%= activity.formatted_value %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>
</div>
