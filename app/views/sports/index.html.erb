<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
  <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-8">
    Sports & Fitness
  </h1>

  <p class="text-xl text-gray-600 mb-12">
    Track my journey across CrossFit, Hyrox, and Running. Benchmarks, race
    results, and upcoming events.
  </p>

  <!-- Sport Type Tabs -->
  <div class="flex space-x-4 mb-12 border-b border-gray-200">
    <%= link_to "All Sports", sports_path, class: "px-4 py-3 font-semibold text-blue-600 border-b-2 border-blue-600 transition-colors" %>
    <%= link_to "CrossFit", sport_path('crossfit'), class: "px-4 py-3 font-semibold text-gray-600 hover:text-gray-900 transition-colors" %>
    <%= link_to "Hyrox", sport_path('hyrox'), class: "px-4 py-3 font-semibold text-gray-600 hover:text-gray-900 transition-colors" %>
    <%= link_to "Running", sport_path('running'), class: "px-4 py-3 font-semibold text-gray-600 hover:text-gray-900 transition-colors" %>
  </div>

  <!-- Benchmarks Section -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Benchmarks</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- CrossFit Benchmarks -->
      <div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
          <span class="text-2xl mr-2">üèãÔ∏è</span> CrossFit
        </h3>

        <div class="space-y-3">
          <% @crossfit_benchmarks.each do |activity| %>
            <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-shadow">
              <div class="flex justify-between items-center">
                <span class="text-gray-700 font-medium">
                  <%= activity.title %>
                </span>

                <span class="text-gray-900 font-bold">
                  <%= activity.formatted_value %>
                </span>
              </div>

              <% if activity.description.present? %>
                <div class="text-gray-500 text-xs mt-2 prose max-w-none">
                  <%= activity.description %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Hyrox Benchmarks -->
      <div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
          <span class="text-2xl mr-2">‚ö°</span> Hyrox
        </h3>

        <div class="space-y-3">
          <% @hyrox_benchmarks.each do |activity| %>
            <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-shadow">
              <div class="flex justify-between items-center">
                <span class="text-gray-700 font-medium">
                  <%= activity.title %>
                </span>

                <span class="text-gray-900 font-bold">
                  <%= activity.formatted_value %>
                </span>
              </div>

              <% if activity.description.present? %>
                <div class="text-gray-500 text-xs mt-2 prose max-w-none">
                  <%= activity.description %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Running Benchmarks -->
      <div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
          <span class="text-2xl mr-2">üèÉ</span> Running
        </h3>

        <div class="space-y-3">
          <% @running_benchmarks.each do |activity| %>
            <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-shadow">
              <div class="flex justify-between items-center">
                <span class="text-gray-700 font-medium">
                  <%= activity.title %>
                </span>

                <span class="text-gray-900 font-bold">
                  <%= activity.formatted_value %>
                </span>
              </div>

              <% if activity.description.present? %>
                <div class="text-gray-500 text-xs mt-2 prose max-w-none">
                  <%= activity.description %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Results -->
  <% if @recent_results.any? %>
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">Recent Results</h2>

      <div class="space-y-4">
        <% @recent_results.each do |result| %>
          <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded uppercase">
                    <%= result.sport_display_name %>
                  </span>

                  <% if result.personal_record %>
                    <span class="px-2 py-1 bg-yellow-100 text-yellow-700 text-xs rounded uppercase font-semibold">
                      üèÜ PR
                    </span>
                  <% end %>
                </div>

                <h3 class="text-xl font-bold text-gray-900 mb-2">
                  <%= result.title %>
                </h3>

                <% if result.description.present? %>
                  <div class="text-gray-600 text-sm mb-3 prose max-w-none">
                    <%= result.description %>
                  </div>
                <% end %>

                <div class="flex items-center gap-4 text-sm text-gray-500">
                  <% if result.date %>
                    <span><%= result.date.strftime("%B %d, %Y") %></span>
                  <% end %>

                  <% if result.location.present? %>
                    <span>üìç <%= result.location %></span>
                  <% end %>
                </div>
              </div>

              <div class="text-right">
                <p class="text-3xl font-bold text-blue-600">
                  <%= result.formatted_value %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- Upcoming Events -->
  <% if @upcoming_events.any? %>
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">üìÖ Upcoming Events</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @upcoming_events.each do |event| %>
          <div class="bg-white border border-gray-200 rounded-xl p-6 hover:border-blue-500 hover:shadow-lg transition-all duration-300">
            <div class="flex items-start justify-between mb-3">
              <div>
                <p class="text-sm text-gray-500">
                  <%= event.date.strftime("%b %d, %Y") %>
                </p>

                <h3 class="text-lg font-semibold text-gray-900 mt-1">
                  <%= event.event_name %>
                </h3>
              </div>

              <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs rounded uppercase font-semibold">
                <%= event.sport_display_name %>
              </span>
            </div>

            <p class="text-gray-600 text-sm mb-3"><%= event.location %></p>

            <% if event.description.present? %>
              <div class="text-gray-600 text-sm prose max-w-none">
                <%= event.description %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>




</div>
