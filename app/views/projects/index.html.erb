<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Page Title -->
  <div class="mb-12">
    <h1 class="text-5xl md:text-6xl font-bold text-black mb-4">
      üöÄ Projects
    </h1>
    <p class="text-xl text-black font-semibold">
      Products I'm building, side projects I'm experimenting with, and open source work. From startups to weekend hacks.
    </p>
  </div>

  <!-- Project Type Filter -->
  <% if @types.any? %>
    <div class="mb-12">
      <div class="flex flex-wrap gap-3">
        <%= link_to "All Projects", projects_path, class: "px-4 py-2 font-bold border-2 border-black #{@selected_type.nil? ? 'bg-black text-eggwhite' : 'bg-eggwhite text-black hover:bg-black hover:text-eggwhite'}" %>

        <% @types.each do |type| %>
          <%= link_to type.titleize, projects_path(type: type), class: "px-4 py-2 font-bold border-2 border-black #{@selected_type == type ? 'bg-black text-eggwhite' : 'bg-eggwhite text-black hover:bg-black hover:text-eggwhite'}" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Featured Projects -->
  <% if @featured_projects.any? && @selected_type.nil? %>
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-black mb-8 border-b-2 border-black pb-3">‚≠ê Featured Projects</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @featured_projects.each do |project| %>
          <%= link_to project_path(project), class: "block bg-yellow-200 border-2 border-black p-6 hover:bg-yellow-300" do %>
            <div class="mb-4">
              <span class="inline-block px-2 py-1 bg-black text-eggwhite text-xs font-bold uppercase border-2 border-black mb-3">
                Featured
              </span>

              <h3 class="text-xl font-bold text-black mb-2">
                <%= project.name %>
              </h3>

              <span class="inline-block px-2 py-1 bg-black text-eggwhite text-xs font-bold border-2 border-black mb-3">
                <%= project.project_type_display_name %>
              </span>
            </div>

            <% if project.description.present? %>
              <div class="text-black text-sm mt-2 prose max-w-none">
                <%= project.description %>
              </div>
            <% end %>

            <% if project.tech_stack_array.any? %>
              <div class="flex flex-wrap gap-2 mt-4">
                <% project.tech_stack_array.each do |tech| %>
                  <span class="px-2 py-1 bg-eggwhite text-black text-xs font-semibold border-2 border-black">
                    <%= tech %>
                  </span>
                <% end %>
              </div>
            <% end %>

            <div class="mt-4 pt-4 border-t-2 border-black flex items-center justify-between">
              <span class="px-2 py-1 text-xs font-bold border-2 border-black <%= project.active? ? 'bg-green-300 text-black' : project.in_development? ? 'bg-yellow-400 text-black' : 'bg-eggwhite-dark text-black' %>">
                <%= project.status_display_name %>
              </span>

              <span class="inline-flex items-center text-black font-bold text-sm">
                View Details ‚Üí
              </span>
            </div>
          <% end %>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- All Projects -->
  <section>
    <h2 class="text-3xl font-bold text-black mb-8 border-b-2 border-black pb-3">
      <% if @selected_type.present? %>
        <%= @selected_type.titleize.gsub('_', ' ') %> Projects
      <% else %>
        All Projects
      <% end %>
    </h2>

    <% if @projects.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @projects.each do |project| %>
          <%= link_to project_path(project), class: "block bg-eggwhite border-2 border-black p-6 hover:bg-eggwhite-dark" do %>
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-xl font-bold text-black flex-1">
                <%= project.name %>
              </h3>

              <span class="px-2 py-1 text-xs font-bold border-2 border-black <%= project.active? ? 'bg-green-300 text-black' : project.in_development? ? 'bg-yellow-300 text-black' : 'bg-eggwhite-dark text-black' %>">
                <%= project.status_display_name %>
              </span>
            </div>

            <span class="inline-block px-2 py-1 bg-black text-eggwhite text-xs font-bold border-2 border-black mb-4">
              <%= project.project_type_display_name %>
            </span>

            <% if project.description.present? %>
              <p class="text-black text-sm mb-4 font-semibold">
                <%= project.short_description(120) %>
              </p>
            <% end %>

            <% if project.tech_stack_array.any? %>
              <div class="flex flex-wrap gap-2 mb-4">
                <% project.tech_stack_array.first(4).each do |tech| %>
                  <span class="px-2 py-1 bg-eggwhite-dark text-black text-xs font-semibold border-2 border-black">
                    <%= tech %>
                  </span>
                <% end %>

                <% if project.tech_stack_array.size > 4 %>
                  <span class="px-2 py-1 bg-eggwhite-dark text-black text-xs font-bold border-2 border-black">
                    +<%= project.tech_stack_array.size - 4 %>
                  </span>
                <% end %>
              </div>
            <% end %>

            <div class="mt-4 pt-4 border-t-2 border-black">
              <span class="inline-flex items-center text-black font-bold text-sm">
                View Details ‚Üí
              </span>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-eggwhite border-2 border-black p-12 text-center">
        <p class="text-black text-lg font-bold">No projects found in this category.</p>
        <%= link_to "View All Projects", projects_path, class: "inline-block mt-4 text-black hover:underline font-bold border-2 border-black px-4 py-2 bg-eggwhite hover:bg-black hover:text-eggwhite" %>
      </div>
    <% end %>
  </section>

  <!-- Project Stats -->
  <% if @selected_type.nil? %>
    <section class="mt-16">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-eggwhite border-2 border-black p-6 text-center hover:bg-eggwhite-dark">
          <p class="text-4xl font-bold text-black">
            <%= @startups.count %>
          </p>
          <p class="text-black text-sm mt-2 font-semibold">Startups</p>
        </div>

        <div class="bg-eggwhite border-2 border-black p-6 text-center hover:bg-eggwhite-dark">
          <p class="text-4xl font-bold text-black">
            <%= @side_projects.count %>
          </p>
          <p class="text-black text-sm mt-2 font-semibold">Side Projects</p>
        </div>

        <div class="bg-eggwhite border-2 border-black p-6 text-center hover:bg-eggwhite-dark">
          <p class="text-4xl font-bold text-black">
            <%= Project.active.count %>
          </p>
          <p class="text-black text-sm mt-2 font-semibold">Active Projects</p>
        </div>
      </div>
    </section>
  <% end %>
</div>
