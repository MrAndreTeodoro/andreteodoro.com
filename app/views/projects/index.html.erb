<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
  <!-- Header -->
  <div class="mb-12">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
      üöÄ Projects
    </h1>

    <p class="text-xl text-gray-600">
      Products I'm building, side projects I'm experimenting with, and open
      source work. From startups to weekend hacks.
    </p>
  </div>

  <!-- Project Type Filter -->
  <div class="mb-12">
    <div class="flex flex-wrap gap-3 border-b border-gray-200">
      <%= link_to "All Projects", projects_path, class: "px-4 py-3 font-semibold transition-colors #{@selected_type.nil? ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-600 hover:text-gray-900'}" %>
      <%= link_to "Startups", projects_path(type: 'startup'), class: "px-4 py-3 font-semibold transition-colors #{@selected_type == 'startup' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-600 hover:text-gray-900'}" %>
      <%= link_to "Side Projects", projects_path(type: 'side_project'), class: "px-4 py-3 font-semibold transition-colors #{@selected_type == 'side_project' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-600 hover:text-gray-900'}" %>
      <%= link_to "Experiments", projects_path(type: 'experiment'), class: "px-4 py-3 font-semibold transition-colors #{@selected_type == 'experiment' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-600 hover:text-gray-900'}" %>
    </div>
  </div>

  <!-- Featured Projects -->
  <% if @featured_projects.any? && @selected_type.nil? %>
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">‚≠ê Featured Projects</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @featured_projects.each do |project| %>
          <div
            class="
              bg-gradient-to-br from-blue-50 to-white border
              border-blue-200 rounded-xl p-6 hover:border-blue-400
              hover:shadow-lg transition-all duration-300 hover:scale-105
            "
          >
            <div class="mb-4">
              <span
                class="
                  inline-block px-2 py-1 bg-blue-100 text-blue-700
                  text-xs rounded uppercase font-semibold mb-3
                "
              >
                Featured
              </span>

              <h3 class="text-xl font-bold text-gray-900 mb-2">
                <%= project.name %>
              </h3>

              <span
                class="
                  inline-block px-2 py-1 bg-gray-100 text-gray-700 text-xs
                  rounded mb-3
                "
              >
                <%= project.project_type_display_name %>
              </span>
            </div>

            <% if project.description.present? %>
              <div class="text-gray-600 text-sm mt-2 prose max-w-none">
                <%= project.description %>
              </div>
            <% end %>

            <% if project.tech_stack_array.any? %>
              <div class="flex flex-wrap gap-2 mt-4">
                <% project.tech_stack_array.each do |tech| %>
                  <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
                    <%= tech %>
                  </span>
                <% end %>
              </div>
            <% end %>

            <div class="mt-4 pt-4 border-t border-gray-200 flex items-center justify-between">
              <span
                class="px-2 py-1 rounded text-xs font-semibold <%= project.active? ? 'bg-green-100 text-green-700' : project.in_development? ? 'bg-yellow-100 text-yellow-700' : 'bg-gray-100 text-gray-600' %>"
              >
                <%= project.status_display_name %>
              </span>

              <% if project.has_url? %>
                <a
                  href="<%= project.url %>"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="
                    inline-flex items-center text-blue-600
                    hover:text-blue-700 transition-colors text-sm
                    font-semibold
                  "
                >
                  View Project ‚Üí
                </a>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- All Projects -->
  <section>
    <h2 class="text-3xl font-bold text-gray-900 mb-8">
      <% if @selected_type.present? %>
        <%= @selected_type.titleize.gsub('_', ' ') %> Projects
      <% else %>
        All Projects
      <% end %>
    </h2>

    <% if @projects.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @projects.each do |project| %>
          <div
            class="
              bg-white border border-gray-200 rounded-xl p-6
              hover:border-gray-300 hover:shadow-lg hover:scale-105
              transition-all duration-300
            "
          >
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-xl font-bold text-gray-900 flex-1">
                <%= project.name %>
              </h3>

              <span
                class="px-2 py-1 rounded text-xs font-semibold <%= project.active? ? 'bg-green-100 text-green-700' : project.in_development? ? 'bg-yellow-100 text-yellow-700' : 'bg-gray-100 text-gray-600' %>"
              >
                <%= project.status_display_name %>
              </span>
            </div>

            <span
              class="
                inline-block px-2 py-1 bg-gray-100 text-gray-700 text-xs
                rounded mb-4
              "
            >
              <%= project.project_type_display_name %>
            </span>

            <% if project.description.present? %>
              <p class="text-gray-600 text-sm mb-4">
                <%= project.short_description(120) %>
              </p>
            <% end %>

            <% if project.tech_stack_array.any? %>
              <div class="flex flex-wrap gap-2 mb-4">
                <% project.tech_stack_array.first(4).each do |tech| %>
                  <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
                    <%= tech %>
                  </span>
                <% end %>

                <% if project.tech_stack_array.size > 4 %>
                  <span class="px-2 py-1 bg-gray-100 text-gray-500 text-xs rounded">
                    +<%= project.tech_stack_array.size - 4 %>
                  </span>
                <% end %>
              </div>
            <% end %>

            <% if project.has_url? %>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <a
                  href="<%= project.url %>"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="
                    inline-flex items-center text-blue-600
                    hover:text-blue-700 transition-colors text-sm
                    font-semibold
                  "
                >
                  View Project ‚Üí
                </a>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white border border-gray-200 rounded-lg p-12 text-center">
        <p class="text-gray-600 text-lg">No projects found in this category.</p>
        <%= link_to "View All Projects", projects_path, class: "inline-block mt-4 text-blue-600 hover:text-blue-700 transition-colors font-semibold" %>
      </div>
    <% end %>
  </section>

  <!-- Project Stats -->
  <% if @selected_type.nil? %>
    <section class="mt-16">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white border border-gray-200 rounded-lg p-6 text-center hover:shadow-lg transition-shadow">
          <p class="text-3xl font-bold text-purple-600">
            <%= @startups.count %>
          </p>

          <p class="text-gray-600 text-sm mt-2">Startups</p>
        </div>

        <div class="bg-white border border-gray-200 rounded-lg p-6 text-center hover:shadow-lg transition-shadow">
          <p class="text-3xl font-bold text-blue-600">
            <%= @side_projects.count %>
          </p>

          <p class="text-gray-600 text-sm mt-2">Side Projects</p>
        </div>

        <div class="bg-white border border-gray-200 rounded-lg p-6 text-center hover:shadow-lg transition-shadow">
          <p class="text-3xl font-bold text-green-600">
            <%= Project.active.count %>
          </p>

          <p class="text-gray-600 text-sm mt-2">Active Projects</p>
        </div>
      </div>
    </section>
  <% end %>
</div>
