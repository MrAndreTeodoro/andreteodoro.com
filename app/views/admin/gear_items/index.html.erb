<% content_for :page_title, "Gear Items" %>
<% content_for :page_subtitle, "Manage your gear recommendations" %>

<!-- Actions Bar -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
  <%= link_to new_admin_gear_item_path, class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
    <svg
      class="w-5 h-5 mr-2"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 4v16m8-8H4"
      />
    </svg>
    Add Gear Item
  <% end %>
</div>

<!-- Search and Filters -->
<div class="bg-white rounded-lg shadow mb-6 border border-gray-200">
  <div class="p-6">
    <%= form_with url: admin_gear_items_path, method: :get, class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
      <!-- Search Bar -->
      <div>
        <label
          for="search"
          class="block text-sm font-medium text-gray-700 mb-2"
        >
          Search
        </label>

        <%= f.text_field :search, value: params[:search], placeholder: "Search by name or description...", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Filters Row -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Category Filter -->
        <div>
          <label
            for="category"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Category
          </label>

          <%= f.select :category,
            options_for_select([
              ['All Categories', ''],
              ['Tech', 'tech'],
              ['Fitness', 'fitness'],
              ['Everyday', 'everyday']
            ], params[:category]),
            {},
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Price Range Filter -->
        <div>
          <label
            for="price_range"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Price Range
          </label>

          <%= f.select :price_range,
            options_for_select([
              ['All Prices', ''],
              ['Under $100', 'under_100'],
              ['$100 - $500', '100_500'],
              ['$500 - $1,000', '500_1000'],
              ['Over $1,000', 'over_1000']
            ], params[:price_range]),
            {},
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Featured Filter -->
        <div>
          <label
            for="featured"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Featured
          </label>

          <%= f.select :featured,
            options_for_select([
              ['All Items', ''],
              ['Featured Only', 'true']
            ], params[:featured]),
            {},
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-3">
        <%= f.submit "Apply Filters", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
        <%= link_to "Clear Filters", admin_gear_items_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Stats Summary -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">Total Items</p>

    <p class="text-2xl font-bold text-gray-900 mt-1">
      <%= @gear_items.count %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">Featured Items</p>

    <p class="text-2xl font-bold text-blue-600 mt-1">
      <%= @gear_items.where(featured: true).count %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">Tech Gear</p>

    <p class="text-2xl font-bold text-purple-600 mt-1">
      <%= @gear_items.where(category: 'tech').count %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">Fitness Gear</p>

    <p class="text-2xl font-bold text-green-600 mt-1">
      <%= @gear_items.where(category: 'fitness').count %>
    </p>
  </div>
</div>

<!-- Gear Items Grid -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <% if @gear_items.any? %>
    <% @gear_items.each do |gear_item| %>
      <div
        class="
          bg-white rounded-lg shadow border border-gray-200 hover:shadow-lg
          transition-shadow
        "
      >
        <div class="p-6">
          <!-- Product Image (Top) -->
          <div class="mb-4">
            <% if gear_item.product_image.attached? %>
              <%= image_tag gear_item.product_image, class: "w-full h-48 object-cover rounded-lg shadow-sm border border-gray-200", alt: "#{gear_item.name} image" %>
            <% elsif gear_item.image_url.present? %>
              <%= image_tag gear_item.image_url, class: "w-full h-48 object-cover rounded-lg shadow-sm border border-gray-200", alt: "#{gear_item.name} image" %>
            <% else %>
              <div class="w-full h-48 bg-gray-100 rounded-lg flex items-center justify-center text-gray-400">
                <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"/>
                </svg>
              </div>
            <% end %>
          </div>

          <!-- Header -->
          <div class="mb-4">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              <%= gear_item.name %>
            </h3>

            <!-- Badges -->
            <div class="flex items-center gap-2 flex-wrap">
              <span
                class="
                  inline-flex items-center px-2.5 py-0.5 rounded-full
                  text-xs font-medium
                  <%= case gear_item.category
                  when 'tech' then 'bg-purple-100 text-purple-800'
                  when 'fitness' then 'bg-green-100 text-green-800'
                  when 'everyday' then 'bg-blue-100 text-blue-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>
                "
              >
                <%= gear_item.category_display_name %>
              </span>

              <% if gear_item.featured %>
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full
                    text-xs font-medium bg-yellow-100 text-yellow-800
                  "
                >
                  <svg
                    class="w-3 h-3 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                    />
                  </svg>
                  Featured
                </span>
              <% end %>

              <% if gear_item.price.present? %>
                <span class="text-sm font-semibold text-gray-900">
                  <%= gear_item.formatted_price %>
                </span>
              <% end %>
            </div>
          </div>

          <!-- Content -->
          <div class="space-y-3">
            <% if gear_item.description.present? %>
              <div class="text-sm text-gray-700">
                <p class="line-clamp-3">
                  <%= gear_item.short_description(200) %>
                </p>
              </div>
            <% else %>
              <p class="text-sm text-gray-400 italic">No description yet</p>
            <% end %>

            <% if gear_item.position.present? && gear_item.position > 0 %>
              <div class="text-xs text-gray-400">
                Display Position: #<%= gear_item.position %>
              </div>
            <% end %>
          </div>

          <!-- Footer -->
          <div
            class="
              mt-4 pt-4 border-t border-gray-200 flex items-center
              justify-between
            "
          >
            <div class="flex items-center gap-2">
              <% if gear_item.has_image? %>
                <span
                  class="inline-flex items-center text-xs text-green-600"
                  title="Has image"
                >
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                    />
                  </svg>
                  Image
                </span>
              <% end %>

              <% if gear_item.has_affiliate_link? %>
                <%= link_to gear_item.affiliate_link, target: "_blank", rel: "noopener", class: "inline-flex items-center text-xs text-purple-600 hover:text-purple-800 transition-colors", title: "Affiliate Link" do %>
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                    />
                  </svg>
                  Buy
                <% end %>
              <% end %>
            </div>

            <div class="flex items-center gap-2">
              <%= link_to edit_admin_gear_item_path(gear_item), class: "text-blue-600 hover:text-blue-900 transition-colors", title: "Edit" do %>
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                  />
                </svg>
              <% end %>

              <%= button_to admin_gear_item_path(gear_item), method: :delete, class: "text-red-600 hover:text-red-900 transition-colors", title: "Delete", form: { data: { turbo_confirm: "Are you sure you want to delete this gear item?" } } do %>
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                  />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-span-2 bg-white rounded-lg shadow border border-gray-200">
      <div class="text-center py-12">
        <svg
          class="mx-auto h-12 w-12 text-gray-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
          />
        </svg>

        <h3 class="mt-2 text-sm font-medium text-gray-900">
          No gear items found
        </h3>

        <p class="mt-1 text-sm text-gray-500">
          <% if params[:search].present? || params[:category].present? || params[:price_range].present? %>
            Try adjusting your filters or search terms.
          <% else %>
            Get started by adding your first gear item.
          <% end %>
        </p>

        <div class="mt-6">
          <%= link_to new_admin_gear_item_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4v16m8-8H4"
              />
            </svg>
            Add Gear Item
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
