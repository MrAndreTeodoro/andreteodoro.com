<% content_for :page_title, "New Blog Post" %>
<% content_for :page_subtitle, "Create a new blog post" %>

<!-- Breadcrumb Navigation -->
<nav class="mb-6" aria-label="Breadcrumb">
  <ol class="flex items-center space-x-2 text-sm text-gray-500">
    <li>
      <%= link_to "Blog Posts", admin_blog_posts_path, class: "hover:text-gray-700 transition-colors" %>
    </li>

    <li>
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd"
        />
      </svg>
    </li>

    <li class="font-medium text-gray-900">New Blog Post</li>
  </ol>
</nav>

<!-- Form Container -->
<div class="max-w-4xl"><%= render "form" %></div>

<!-- Tips Section -->
<div class="max-w-4xl mt-6">
  <div class="bg-blue-50 rounded-lg border border-blue-200 p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg
          class="h-5 w-5 text-blue-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
      </div>

      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">
          Tips for creating blog posts
        </h3>

        <div class="mt-2 text-sm text-blue-700">
          <ul class="list-disc pl-5 space-y-1">
            <li>
              <strong>Required fields:</strong> Only title and content are
              required
            </li>

            <li>
              <strong>URL slug:</strong> Leave blank to auto-generate from
              title, or customize for SEO
            </li>

            <li>
              <strong>Drafts:</strong> Leave publish date blank to save as
              draft; set date to schedule future publish
            </li>

            <li>
              <strong>Featured posts:</strong> Highlighted prominently on blog
              homepage and listings
            </li>

            <li>
              <strong>Viral indicator:</strong> Mark posts that perform
              exceptionally well to showcase them
            </li>

            <li>
              <strong>Excerpt:</strong> Write a compelling 150-200 character
              summary for listings and SEO
            </li>

            <li>
              <strong>Reading time:</strong> Automatically calculated at 200
              words per minute
            </li>

            <li>
              <strong>Content format:</strong> Currently supports plain text
              and HTML (Markdown support coming soon)
            </li>

            <li>
              <strong>Publishing:</strong> Use "Publish Now" button after
              saving to publish immediately
            </li>

            <li>
              <strong>SEO tip:</strong> Use descriptive titles and excerpts for
              better search engine visibility
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
