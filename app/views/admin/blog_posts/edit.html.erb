<% content_for :page_title, "Edit Blog Post" %>
<% content_for :page_subtitle, "Update blog post details" %>

<!-- Breadcrumb Navigation -->
<nav class="mb-6" aria-label="Breadcrumb">
  <ol class="flex items-center space-x-2 text-sm text-gray-500">
    <li>
      <%= link_to "Blog Posts", admin_blog_posts_path, class: "hover:text-gray-700 transition-colors" %>
    </li>

    <li>
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd"
        />
      </svg>
    </li>

    <li class="font-medium text-gray-900">Edit Blog Post</li>
  </ol>
</nav>

<!-- Blog Post Info Banner -->
<div class="max-w-4xl mb-6">
  <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
    <div class="flex items-center justify-between">
      <div class="flex-1">
        <div class="flex items-center gap-3">
          <div>
            <h2 class="text-lg font-semibold text-gray-900">
              <%= @blog_post.title %>
            </h2>

            <div class="flex items-center gap-3 mt-2">
              <% if @blog_post.published? %>
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full text-xs
                    font-medium bg-green-100 text-green-800
                  "
                >
                  <svg
                    class="w-3 h-3 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  Published
                </span>
              <% elsif @blog_post.scheduled? %>
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full text-xs
                    font-medium bg-orange-100 text-orange-800
                  "
                >
                  <svg
                    class="w-3 h-3 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  Scheduled
                </span>
              <% else %>
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full text-xs
                    font-medium bg-gray-100 text-gray-800
                  "
                >
                  <svg
                    class="w-3 h-3 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M4 2a2 2 0 00-2 2v11a3 3 0 106 0V4a2 2 0 00-2-2H4zm1 14a1 1 0 100-2 1 1 0 000 2zm5-1.757l4.9-4.9a2 2 0 000-2.828L13.485 5.1a2 2 0 00-2.828 0L10 5.757v8.486zM16 18H9.071l6-6H16a2 2 0 012 2v2a2 2 0 01-2 2z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  Draft
                </span>
              <% end %>

              <% if @blog_post.featured %>
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full text-xs
                    font-medium bg-yellow-100 text-yellow-800
                  "
                >
                  <svg
                    class="w-3 h-3 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                    />
                  </svg>
                  Featured
                </span>
              <% end %>

              <% if @blog_post.viral %>
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full text-xs
                    font-medium bg-red-100 text-red-800
                  "
                >
                  <svg
                    class="w-3 h-3 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  Viral
                </span>
              <% end %>
            </div>
          </div>
        </div>

        <% if @blog_post.excerpt.present? %>
          <p class="text-sm text-gray-600 mt-3 line-clamp-2">
            <%= @blog_post.short_excerpt(200) %>
          </p>
        <% end %>

        <div class="flex items-center gap-4 mt-3 text-xs text-gray-500">
          <span class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
              <path
                fill-rule="evenodd"
                d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z"
                clip-rule="evenodd"
              />
            </svg>
            <%= @blog_post.views_count %> views
          </span>

          <span class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                clip-rule="evenodd"
              />
            </svg>
            <%= @blog_post.reading_time_text %>
          </span>

          <span class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                clip-rule="evenodd"
              />
            </svg>
            <%= @blog_post.formatted_published_date %>
          </span>
        </div>
      </div>

      <div class="text-right ml-4">
        <%= link_to blog_post_path(@blog_post.slug),
          target: "_blank",
          class: "inline-flex items-center px-3 py-1.5 text-sm font-medium text-blue-700 bg-blue-50 rounded-md hover:bg-blue-100 transition-colors" do %>
          <svg
            class="w-4 h-4 mr-1.5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            />
          </svg>
          View Post
        <% end %>

        <p class="text-xs text-gray-500 mt-2">
          Slug: <code class="bg-gray-100 px-1 rounded"><%= @blog_post.slug %></code>
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Form Container -->
<div class="max-w-4xl"><%= render "form" %></div>

<!-- Danger Zone -->
<div class="max-w-4xl mt-6">
  <div class="bg-red-50 rounded-lg border border-red-200 p-6">
    <div class="flex items-start justify-between">
      <div>
        <h3 class="text-sm font-medium text-red-800">Delete this blog post</h3>

        <p class="mt-1 text-sm text-red-700">
          Once you delete this blog post, there is no going back. All view
          counts and associated data will be permanently lost.
        </p>
      </div>

      <%= button_to "Delete Blog Post",
        admin_blog_post_path(@blog_post.id),
        method: :delete,
        class: "ml-4 px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors",
        form: {
          data: {
            turbo_confirm: "Are you sure you want to permanently delete this blog post? This action cannot be undone and all analytics data will be lost."
          }
        } %>
    </div>
  </div>
</div>
