<% content_for :page_title, "Blog Posts" %>
<% content_for :page_subtitle, "Manage your blog posts and articles" %>

<!-- Search and Filters -->
<div class="mb-6 space-y-4">
  <!-- Search Bar -->
  <div class="flex items-center gap-4">
    <%= form_with url: admin_blog_posts_path, method: :get, class: "flex-1 flex gap-2" do |f| %>
      <div class="relative flex-1">
        <div
          class="
            absolute inset-y-0 left-0 pl-3 flex items-center
            pointer-events-none
          "
        >
          <svg
            class="h-5 w-5 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
            />
          </svg>
        </div>

        <%= f.text_field :search,
          value: params[:search],
          placeholder: "Search posts by title, excerpt, or content...",
          class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <%= f.hidden_field :status, value: params[:status] if params[:status].present? %>
      <%= f.hidden_field :year, value: params[:year] if params[:year].present? %>
      <%= f.hidden_field :featured, value: params[:featured] if params[:featured].present? %>
      <%= f.hidden_field :viral, value: params[:viral] if params[:viral].present? %>

      <%= f.submit "Search", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>

      <% if params[:search].present? %>
        <%= link_to "Clear", admin_blog_posts_path(status: params[:status], year: params[:year], featured: params[:featured], viral: params[:viral]), class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition-colors" %>
      <% end %>
    <% end %>

    <%= link_to new_admin_blog_post_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors whitespace-nowrap" do %>
      <svg
        class="w-5 h-5 mr-2"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 6v6m0 0v6m0-6h6m-6 0H6"
        />
      </svg>
      New Post
    <% end %>
  </div>

  <!-- Filter Tabs -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <!-- Filter by Status -->
      <div class="flex space-x-2">
        <%= link_to "All Posts", admin_blog_posts_path(search: params[:search], year: params[:year], featured: params[:featured], viral: params[:viral]), class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:status].nil? ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50'}" %>
        <%= link_to "Published", admin_blog_posts_path(status: 'published', search: params[:search], year: params[:year], featured: params[:featured], viral: params[:viral]), class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'published' ? 'bg-green-600 text-white' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50'}" %>
        <%= link_to "Scheduled", admin_blog_posts_path(status: 'scheduled', search: params[:search], year: params[:year], featured: params[:featured], viral: params[:viral]), class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'scheduled' ? 'bg-orange-600 text-white' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50'}" %>
        <%= link_to "Drafts", admin_blog_posts_path(status: 'draft', search: params[:search], year: params[:year], featured: params[:featured], viral: params[:viral]), class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'draft' ? 'bg-gray-600 text-white' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50'}" %>
      </div>

      <!-- Featured & Viral Filters -->
      <div class="flex space-x-2 border-l border-gray-300 pl-4">
        <%= link_to admin_blog_posts_path(status: params[:status], search: params[:search], year: params[:year], viral: params[:viral], featured: params[:featured] == 'true' ? nil : 'true'), class: "inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:featured] == 'true' ? 'bg-yellow-500 text-white' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50'}" do %>
          <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
            />
          </svg>
          Featured
        <% end %>

        <%= link_to admin_blog_posts_path(status: params[:status], search: params[:search], year: params[:year], featured: params[:featured], viral: params[:viral] == 'true' ? nil : 'true'), class: "inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:viral] == 'true' ? 'bg-red-500 text-white' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50'}" do %>
          <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z"
              clip-rule="evenodd"
            />
          </svg>
          Viral
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Stats -->
<div class="grid grid-cols-5 gap-4 mb-6">
  <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
    <p class="text-sm text-gray-600">Total Posts</p>
    <p class="text-2xl font-bold text-gray-900 mt-1"><%= @blog_posts.count %></p>

    <p class="text-xs text-gray-500 mt-1">
      <% if params[:search].present? || params[:status].present? || params[:featured].present? || params[:viral].present? %>
        Filtered from
        <%= BlogPost.count %>
        total
      <% else %>
        All posts
      <% end %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
    <p class="text-sm text-gray-600">Published</p>

    <p class="text-2xl font-bold text-green-600 mt-1">
      <%= BlogPost.published.count %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
    <p class="text-sm text-gray-600">Scheduled</p>

    <p class="text-2xl font-bold text-orange-600 mt-1">
      <%= BlogPost.scheduled.count %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
    <p class="text-sm text-gray-600">Drafts</p>

    <p class="text-2xl font-bold text-gray-600 mt-1">
      <%= BlogPost.drafted.count %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
    <p class="text-sm text-gray-600">Total Views</p>

    <p class="text-2xl font-bold text-blue-600 mt-1">
      <%= BlogPost.sum(:views_count) %>
    </p>
  </div>
</div>

<!-- Blog Posts Table -->
<div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
  <% if @blog_posts.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th
              class="
                px-6 py-3 text-left text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Title
            </th>

            <th
              class="
                px-6 py-3 text-left text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Status
            </th>

            <th
              class="
                px-6 py-3 text-left text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Published
            </th>

            <th
              class="
                px-6 py-3 text-left text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Views
            </th>

            <th
              class="
                px-6 py-3 text-left text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Reading Time
            </th>

            <th
              class="
                px-6 py-3 text-right text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Actions
            </th>
          </tr>
        </thead>

        <tbody class="bg-white divide-y divide-gray-200">
          <% @blog_posts.each do |blog_post| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="flex items-start">
                  <div class="flex-1 min-w-0">
                    <div class="text-sm font-medium text-gray-900">
                      <%= blog_post.title %>
                    </div>

                    <% if blog_post.excerpt.present? %>
                      <div class="text-sm text-gray-500 mt-1">
                        <%= truncate(blog_post.excerpt.to_plain_text, length: 100) %>
                      </div>
                    <% end %>

                    <div class="flex items-center gap-2 mt-2">
                      <% if blog_post.featured %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                          <svg
                            class="w-3 h-3 mr-1"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                            />
                          </svg>
                          Featured
                        </span>
                      <% end %>

                      <% if blog_post.viral %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                          <svg
                            class="w-3 h-3 mr-1"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z"
                              clip-rule="evenodd"
                            />
                          </svg>
                          Viral
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <% if blog_post.published? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <svg
                      class="w-3 h-3 mr-1"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    Published
                  </span>
                <% elsif blog_post.scheduled? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                    <svg
                      class="w-3 h-3 mr-1"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    Scheduled
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <svg
                      class="w-3 h-3 mr-1"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M4 2a2 2 0 00-2 2v11a3 3 0 106 0V4a2 2 0 00-2-2H4zm1 14a1 1 0 100-2 1 1 0 000 2zm5-1.757l4.9-4.9a2 2 0 000-2.828L13.485 5.1a2 2 0 00-2.828 0L10 5.757v8.486zM16 18H9.071l6-6H16a2 2 0 012 2v2a2 2 0 01-2 2z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    Draft
                  </span>
                <% end %>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= blog_post.formatted_published_date %>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <div class="flex items-center">
                  <svg
                    class="w-4 h-4 mr-1 text-gray-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                    <path
                      fill-rule="evenodd"
                      d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <%= blog_post.views_count %>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <div class="flex items-center">
                  <svg
                    class="w-4 h-4 mr-1 text-gray-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <%= blog_post.reading_time_text %>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end space-x-3">
                  <% if blog_post.published? %>
                    <%= link_to blog_post_path(blog_post), target: "_blank", class: "text-gray-600 hover:text-gray-900", title: "View Post" do %>
                      <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        />
                      </svg>
                    <% end %>
                  <% end %>

                  <%= link_to edit_admin_blog_post_path(blog_post.id), class: "text-blue-600 hover:text-blue-900", title: "Edit" do %>
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                      />
                    </svg>
                  <% end %>

                  <% if blog_post.draft? || blog_post.scheduled? %>
                    <%= button_to publish_admin_blog_post_path(blog_post.id), method: :patch, class: "text-green-600 hover:text-green-900", title: "Publish Now", form: { data: { turbo_confirm: "Publish this post now?" } } do %>
                      <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                    <% end %>
                  <% end %>

                  <%= button_to admin_blog_post_path(blog_post.id), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this blog post?" }, class: "text-red-600 hover:text-red-900", title: "Delete" do %>
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                      />
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg
        class="mx-auto h-12 w-12 text-gray-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
        />
      </svg>

      <h3 class="mt-2 text-sm font-medium text-gray-900">No blog posts</h3>

      <p class="mt-1 text-sm text-gray-500">
        Get started by creating a new blog post.
      </p>

      <div class="mt-6">
        <%= link_to new_admin_blog_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6v6m0 0v6m0-6h6m-6 0H6"
            />
          </svg>
          New Blog Post
        <% end %>
      </div>
    </div>
  <% end %>
</div>
