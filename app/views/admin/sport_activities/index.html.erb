<% content_for :page_title, "Sport Activities" %>
<% content_for :page_subtitle, "Manage your sports achievements and events" %>

<!-- Actions Bar -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
  <%= link_to new_admin_sport_activity_path, class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
    <svg
      class="w-5 h-5 mr-2"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 4v16m8-8H4"
      />
    </svg>
    Add Sport Activity
  <% end %>
</div>

<!-- Search and Filters -->
<div class="bg-white rounded-lg shadow mb-6 border border-gray-200">
  <div class="p-6">
    <%= form_with url: admin_sport_activities_path, method: :get, class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
      <!-- Search Bar -->
      <div>
        <label
          for="search"
          class="block text-sm font-medium text-gray-700 mb-2"
        >
          Search
        </label>

        <%= f.text_field :search, value: params[:search], placeholder: "Search by title or description...", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Filters Row -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Sport Type Filter -->
        <div>
          <label
            for="sport_type"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Sport Type
          </label>

          <%= f.select :sport_type,
            options_for_select([
              ['All Types', ''],
              ['CrossFit', 'crossfit'],
              ['Hyrox', 'hyrox'],
              ['Running', 'running']
            ], params[:sport_type]),
            {},
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Category Filter -->
        <div>
          <label
            for="category"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Category
          </label>

          <%= f.select :category,
            options_for_select([
              ['All Categories', ''],
              ['Benchmark', 'benchmark'],
              ['Result', 'result'],
              ['Event', 'event']
            ], params[:category]),
            {},
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Personal Record Filter -->
        <div>
          <label
            for="personal_record"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Personal Records
          </label>

          <%= f.select :personal_record,
            options_for_select([
              ['All Activities', ''],
              ['Personal Records Only', 'true']
            ], params[:personal_record]),
            {},
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-3">
        <%= f.submit "Apply Filters", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
        <%= link_to "Clear Filters", admin_sport_activities_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Stats Summary -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">Total Activities</p>

    <p class="text-2xl font-bold text-gray-900 mt-1">
      <%= @sport_activities.count %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">Personal Records</p>

    <p class="text-2xl font-bold text-blue-600 mt-1">
      <%= @sport_activities.where(personal_record: true).count %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">CrossFit</p>

    <p class="text-2xl font-bold text-orange-600 mt-1">
      <%= @sport_activities.where(sport_type: 'crossfit').count %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">Hyrox</p>

    <p class="text-2xl font-bold text-green-600 mt-1">
      <%= @sport_activities.where(sport_type: 'hyrox').count %>
    </p>
  </div>
</div>

<!-- Activities Table -->
<div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
  <% if @sport_activities.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th
              scope="col"
              class="
                px-6 py-3 text-left text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Activity
            </th>

            <th
              scope="col"
              class="
                px-6 py-3 text-left text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Sport Type
            </th>

            <th
              scope="col"
              class="
                px-6 py-3 text-left text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Category
            </th>

            <th
              scope="col"
              class="
                px-6 py-3 text-left text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Result
            </th>

            <th
              scope="col"
              class="
                px-6 py-3 text-left text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Date
            </th>

            <th
              scope="col"
              class="
                px-6 py-3 text-left text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Status
            </th>

            <th
              scope="col"
              class="
                px-6 py-3 text-right text-xs font-medium text-gray-500
                uppercase tracking-wider
              "
            >
              Actions
            </th>
          </tr>
        </thead>

        <tbody class="bg-white divide-y divide-gray-200">
          <% @sport_activities.each do |activity| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4">
                <div class="flex items-start">
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= activity.title %>
                    </div>

                    <% if activity.description.present? %>
                      <div class="text-sm text-gray-500 mt-1 line-clamp-2">
                        <%= truncate(activity.description.to_plain_text, length: 100) %>
                      </div>
                    <% end %>

                    <% if activity.event_name.present? %>
                      <div class="text-xs text-gray-400 mt-1">
                        <span class="font-medium">Event:</span>
                        <%= activity.event_name %>
                      </div>
                    <% end %>

                    <% if activity.location.present? %>
                      <div class="text-xs text-gray-400">
                        <span class="font-medium">Location:</span>
                        <%= activity.location %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case activity.sport_type
                    when 'crossfit' then 'bg-orange-100 text-orange-800'
                    when 'hyrox' then 'bg-green-100 text-green-800'
                    when 'running' then 'bg-blue-100 text-blue-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>
                  "
                >
                  <%= activity.sport_display_name %>
                </span>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case activity.category
                    when 'benchmark' then 'bg-purple-100 text-purple-800'
                    when 'result' then 'bg-blue-100 text-blue-800'
                    when 'event' then 'bg-yellow-100 text-yellow-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>
                  "
                >
                  <%= activity.category_display_name %>
                </span>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <% if activity.value.present? %>
                    <span class="font-medium">
                      <%= activity.formatted_value %>
                    </span>
                  <% else %>
                    <span class="text-gray-400">—</span>
                  <% end %>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= activity.date&.strftime("%b %d, %Y") || "—" %>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <% if activity.personal_record %>
                  <span
                    class="
                      inline-flex items-center px-2.5 py-0.5 rounded-full
                      text-xs font-medium bg-yellow-100 text-yellow-800
                    "
                  >
                    <svg
                      class="w-3 h-3 mr-1"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                      />
                    </svg>
                    PR
                  </span>
                <% elsif activity.category == 'event' && activity.upcoming? %>
                  <span
                    class="
                      inline-flex items-center px-2.5 py-0.5 rounded-full
                      text-xs font-medium bg-green-100 text-green-800
                    "
                  >
                    Upcoming
                  </span>
                <% elsif activity.category == 'event' && activity.past? %>
                  <span
                    class="
                      inline-flex items-center px-2.5 py-0.5 rounded-full
                      text-xs font-medium bg-gray-100 text-gray-800
                    "
                  >
                    Completed
                  </span>
                <% end %>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end gap-2">
                  <% if activity.result_url.present? %>
                    <%= link_to activity.result_url, target: "_blank", rel: "noopener", class: "text-gray-600 hover:text-gray-900 transition-colors", title: "View Result" do %>
                      <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        />
                      </svg>
                    <% end %>
                  <% end %>

                  <%= link_to edit_admin_sport_activity_path(activity), class: "text-blue-600 hover:text-blue-900 transition-colors", title: "Edit" do %>
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                      />
                    </svg>
                  <% end %>

                  <%= button_to admin_sport_activity_path(activity), method: :delete, class: "text-red-600 hover:text-red-900 transition-colors", title: "Delete", form: { data: { turbo_confirm: "Are you sure you want to delete this activity?" } } do %>
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                      />
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg
        class="mx-auto h-12 w-12 text-gray-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M13 10V3L4 14h7v7l9-11h-7z"
        />
      </svg>

      <h3 class="mt-2 text-sm font-medium text-gray-900">
        No sport activities found
      </h3>

      <p class="mt-1 text-sm text-gray-500">
        <% if params[:search].present? || params[:sport_type].present? || params[:category].present? %>
          Try adjusting your filters or search terms.
        <% else %>
          Get started by creating a new sport activity.
        <% end %>
      </p>

      <div class="mt-6">
        <%= link_to new_admin_sport_activity_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4v16m8-8H4"
            />
          </svg>
          Add Sport Activity
        <% end %>
      </div>
    </div>
  <% end %>
</div>
