<% content_for :page_title, "Edit Sport Activity" %>
<% content_for :page_subtitle, "Update sport activity details" %>

<!-- Breadcrumb Navigation -->
<nav class="mb-6" aria-label="Breadcrumb">
  <ol class="flex items-center space-x-2 text-sm text-gray-500">
    <li>
      <%= link_to "Sport Activities", admin_sport_activities_path, class: "hover:text-gray-700 transition-colors" %>
    </li>

    <li>
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd"
        />
      </svg>
    </li>

    <li class="font-medium text-gray-900">Edit Activity</li>
  </ol>
</nav>

<!-- Activity Info Banner -->
<div class="max-w-4xl mb-6">
  <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-lg font-semibold text-gray-900">
          <%= @sport_activity.title %>
        </h2>

        <div class="flex items-center gap-3 mt-2">
          <span
            class="
              inline-flex items-center px-2.5 py-0.5 rounded-full text-xs
              font-medium
              <%= case @sport_activity.sport_type
              when 'crossfit' then 'bg-orange-100 text-orange-800'
              when 'hyrox' then 'bg-green-100 text-green-800'
              when 'running' then 'bg-blue-100 text-blue-800'
              else 'bg-gray-100 text-gray-800'
              end %>
            "
          >
            <%= @sport_activity.sport_display_name %>
          </span>

          <span
            class="
              inline-flex items-center px-2.5 py-0.5 rounded-full text-xs
              font-medium
              <%= case @sport_activity.category
              when 'benchmark' then 'bg-purple-100 text-purple-800'
              when 'result' then 'bg-blue-100 text-blue-800'
              when 'event' then 'bg-yellow-100 text-yellow-800'
              else 'bg-gray-100 text-gray-800'
              end %>
            "
          >
            <%= @sport_activity.category_display_name %>
          </span>

          <% if @sport_activity.personal_record %>
            <span
              class="
                inline-flex items-center px-2.5 py-0.5 rounded-full text-xs
                font-medium bg-yellow-100 text-yellow-800
              "
            >
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                />
              </svg>
              Personal Record
            </span>
          <% end %>
        </div>
      </div>

      <div class="text-right">
        <p class="text-sm text-gray-500">Created</p>

        <p class="text-sm font-medium text-gray-900">
          <%= @sport_activity.created_at.strftime("%b %d, %Y") %>
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Form Container -->
<div class="max-w-4xl"><%= render "form" %></div>

<!-- Danger Zone -->
<div class="max-w-4xl mt-6">
  <div class="bg-red-50 rounded-lg border border-red-200 p-6">
    <div class="flex items-start justify-between">
      <div>
        <h3 class="text-sm font-medium text-red-800">Delete this activity</h3>

        <p class="mt-1 text-sm text-red-700">
          Once you delete this activity, there is no going back. Please be
          certain.
        </p>
      </div>

      <%= button_to "Delete Activity",
        admin_sport_activity_path(@sport_activity),
        method: :delete,
        class: "ml-4 px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors",
        form: {
          data: {
            turbo_confirm: "Are you sure you want to permanently delete this activity? This action cannot be undone."
          }
        } %>
    </div>
  </div>
</div>
