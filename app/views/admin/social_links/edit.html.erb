<% content_for :page_title, "Edit Social Link" %>
<% content_for :page_subtitle, "Update social media profile details" %>

<!-- Breadcrumb Navigation -->
<nav class="mb-6" aria-label="Breadcrumb">
  <ol class="flex items-center space-x-2 text-sm text-gray-500">
    <li>
      <%= link_to "Social Links", admin_social_links_path, class: "hover:text-gray-700 transition-colors" %>
    </li>

    <li>
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd"
        />
      </svg>
    </li>

    <li class="font-medium text-gray-900">Edit Social Link</li>
  </ol>
</nav>

<!-- Social Link Info Banner -->
<div class="max-w-4xl mb-6">
  <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <span
            class="
              inline-flex items-center justify-center h-12 w-12 rounded-full
              <%= @social_link.color_class %> bg-opacity-10
            "
          >
            <svg
              class="w-6 h-6 <%= @social_link.color_class %>"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <% case @social_link.platform %>
              <% when 'twitter' %>
                <path
                  d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                />
              <% when 'github' %>
                <path
                  fill-rule="evenodd"
                  d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                />
              <% when 'linkedin' %>
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                />
              <% else %>
                <path
                  d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                />
              <% end %>
            </svg>
          </span>
        </div>

        <div class="ml-4">
          <h2 class="text-lg font-semibold text-gray-900">
            <%= @social_link.platform_display_name %>
          </h2>

          <div class="flex items-center gap-3 mt-1">
            <% if @social_link.username.present? %>
              <span class="text-sm text-gray-600">
                <%= @social_link.username %>
              </span>
            <% end %>

            <% if @social_link.has_followers? %>
              <span class="text-sm font-semibold text-gray-900">
                <%= @social_link.formatted_follower_count %> followers
              </span>
            <% end %>

            <% if @social_link.display_in_header %>
              <span
                class="
                  inline-flex items-center px-2.5 py-0.5 rounded-full text-xs
                  font-medium bg-green-100 text-green-800
                "
              >
                In Header
              </span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="text-right">
        <a
          href="<%= @social_link.url %>"
          target="_blank"
          rel="noopener noreferrer"
          class="
            inline-flex items-center px-3 py-1.5 text-sm text-blue-600
            hover:text-blue-800 transition-colors
          "
        >
          <svg
            class="w-4 h-4 mr-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            />
          </svg>
          Visit Profile
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Form Container -->
<div class="max-w-4xl"><%= render "form" %></div>

<!-- Danger Zone -->
<div class="max-w-4xl mt-6">
  <div class="bg-red-50 rounded-lg border border-red-200 p-6">
    <div class="flex items-start justify-between">
      <div>
        <h3 class="text-sm font-medium text-red-800">
          Delete this social link
        </h3>

        <p class="mt-1 text-sm text-red-700">
          Once you delete this social link, there is no going back. Please be
          certain.
        </p>
      </div>

      <%= button_to "Delete Social Link",
        admin_social_link_path(@social_link),
        method: :delete,
        class: "ml-4 px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors",
        form: {
          data: {
            turbo_confirm: "Are you sure you want to permanently delete this social link? This action cannot be undone."
          }
        } %>
    </div>
  </div>
</div>
