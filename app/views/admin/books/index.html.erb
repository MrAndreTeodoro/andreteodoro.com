<% content_for :page_title, "Books" %>
<% content_for :page_subtitle, "Manage your book reviews and reading list" %>

<!-- Actions Bar -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
  <%= link_to new_admin_book_path, class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
    <svg
      class="w-5 h-5 mr-2"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 4v16m8-8H4"
      />
    </svg>
    Add Book
  <% end %>
</div>

<!-- Search and Filters -->
<div class="bg-white rounded-lg shadow mb-6 border border-gray-200">
  <div class="p-6">
    <%= form_with url: admin_books_path, method: :get, class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
      <!-- Search Bar -->
      <div>
        <label
          for="search"
          class="block text-sm font-medium text-gray-700 mb-2"
        >
          Search
        </label>

        <%= f.text_field :search, value: params[:search], placeholder: "Search by title or author...", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Filters Row -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Category Filter -->
        <div>
          <label
            for="category"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Category
          </label>

          <%= f.select :category,
            options_for_select([
              ['All Categories', ''],
              ['Tech', 'tech'],
              ['Self-Help', 'self-help'],
              ['Productivity', 'productivity'],
              ['Fitness', 'fitness'],
              ['Business', 'business'],
              ['Biography', 'biography'],
              ['Fiction', 'fiction']
            ], params[:category]),
            {},
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Rating Filter -->
        <div>
          <label
            for="rating"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Rating
          </label>

          <%= f.select :rating,
            options_for_select([
              ['All Ratings', ''],
              ['5 Stars', '5'],
              ['4 Stars', '4'],
              ['3 Stars', '3'],
              ['2 Stars', '2'],
              ['1 Star', '1']
            ], params[:rating]),
            {},
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Featured Filter -->
        <div>
          <label
            for="featured"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Featured
          </label>

          <%= f.select :featured,
            options_for_select([
              ['All Books', ''],
              ['Featured Only', 'true']
            ], params[:featured]),
            {},
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Reviewed Filter -->
        <div>
          <label
            for="reviewed"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Reviewed
          </label>

          <%= f.select :reviewed,
            options_for_select([
              ['All Books', ''],
              ['With Reviews Only', 'true']
            ], params[:reviewed]),
            {},
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-3">
        <%= f.submit "Apply Filters", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
        <%= link_to "Clear Filters", admin_books_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Stats Summary -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">Total Books</p>

    <p class="text-2xl font-bold text-gray-900 mt-1"><%= @books.count %></p>
  </div>

  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">Featured Books</p>

    <p class="text-2xl font-bold text-blue-600 mt-1">
      <%= @books.where(featured: true).count %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">With Reviews</p>

    <p class="text-2xl font-bold text-green-600 mt-1">
      <%= Book.reviewed.count %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
    <p class="text-sm font-medium text-gray-600">5-Star Books</p>

    <p class="text-2xl font-bold text-yellow-600 mt-1">
      <%= @books.where(rating: 5).count %>
    </p>
  </div>
</div>

<!-- Books Grid -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <% if @books.any? %>
    <% @books.each do |book| %>
      <div
        class="
          bg-white rounded-lg shadow border border-gray-200 hover:shadow-lg
          transition-shadow
        "
      >
        <div class="p-6">
          <!-- Cover Image (Top) -->
          <div class="mb-4">
            <% if book.cover_image.attached? %>
              <%= image_tag book.cover_image, class: "w-full h-64 object-cover rounded-lg shadow-sm border border-gray-200", alt: "#{book.title} cover" %>
            <% elsif book.cover_url.present? %>
              <%= image_tag book.cover_url, class: "w-full h-64 object-cover rounded-lg shadow-sm border border-gray-200", alt: "#{book.title} cover" %>
            <% else %>
              <div class="w-full h-64 bg-gray-100 rounded-lg flex items-center justify-center text-gray-400">
                <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
                </svg>
              </div>
            <% end %>
          </div>

          <!-- Header -->
          <div class="mb-4">
            <h3 class="text-lg font-semibold text-gray-900 mb-1">
              <%= book.title %>
            </h3>

            <p class="text-sm text-gray-600 mb-2">by <%= book.author %></p>

            <!-- Badges -->
            <div class="flex items-center gap-2 flex-wrap">
              <% if book.category.present? %>
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full
                    text-xs font-medium
                    <%= case book.category
                    when 'tech' then 'bg-blue-100 text-blue-800'
                    when 'self-help' then 'bg-purple-100 text-purple-800'
                    when 'productivity' then 'bg-green-100 text-green-800'
                    when 'fitness' then 'bg-orange-100 text-orange-800'
                    when 'business' then 'bg-indigo-100 text-indigo-800'
                    when 'biography' then 'bg-pink-100 text-pink-800'
                    when 'fiction' then 'bg-red-100 text-red-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>
                  "
                >
                  <%= book.category.titleize %>
                </span>
              <% end %>

              <% if book.featured %>
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full
                    text-xs font-medium bg-yellow-100 text-yellow-800
                  "
                >
                  <svg
                    class="w-3 h-3 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                    />
                  </svg>
                  Featured
                </span>
              <% end %>

              <% if book.rating.present? %>
                <span class="text-yellow-500 text-sm font-medium">
                  <%= "★" * book.rating %>
                  <%= "☆" * (5 - book.rating) %>
                </span>
              <% end %>
            </div>
          </div>

          <!-- Content -->
          <div class="space-y-3">
            <% if book.read_date.present? %>
              <div class="flex items-center text-sm text-gray-500">
                <svg
                  class="w-4 h-4 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                  />
                </svg>
                Read on
                <%= book.read_date.strftime("%B %d, %Y") %>
              </div>
            <% end %>

            <% if book.review.present? %>
              <div class="text-sm text-gray-700">
                <p class="line-clamp-3"><%= book.excerpt(200) %></p>
              </div>
            <% else %>
              <p class="text-sm text-gray-400 italic">No review yet</p>
            <% end %>

            <% if book.isbn.present? %>
              <div class="text-xs text-gray-400">ISBN: <%= book.isbn %></div>
            <% end %>
          </div>

          <!-- Footer -->
          <div
            class="
              mt-4 pt-4 border-t border-gray-200 flex items-center
              justify-between
            "
          >
            <div class="flex items-center gap-2">
              <% if book.has_review? %>
                <span
                  class="inline-flex items-center text-xs text-green-600"
                  title="Has review"
                >
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />

                    <path
                      fill-rule="evenodd"
                      d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  Review
                </span>
              <% end %>

              <% if book.has_notes? %>
                <span
                  class="inline-flex items-center text-xs text-blue-600"
                  title="Has notes"
                >
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"
                    />
                  </svg>
                  Notes
                </span>
              <% end %>

              <% if book.affiliate_link.present? %>
                <%= link_to book.affiliate_link, target: "_blank", rel: "noopener", class: "inline-flex items-center text-xs text-purple-600 hover:text-purple-800 transition-colors", title: "Affiliate Link" do %>
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                    />
                  </svg>
                  Buy
                <% end %>
              <% end %>
            </div>

            <div class="flex items-center gap-2">
              <%= link_to edit_admin_book_path(book), class: "text-blue-600 hover:text-blue-900 transition-colors", title: "Edit" do %>
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                  />
                </svg>
              <% end %>

              <%= button_to admin_book_path(book), method: :delete, class: "text-red-600 hover:text-red-900 transition-colors", title: "Delete", form: { data: { turbo_confirm: "Are you sure you want to delete this book?" } } do %>
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                  />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-span-2 bg-white rounded-lg shadow border border-gray-200">
      <div class="text-center py-12">
        <svg
          class="mx-auto h-12 w-12 text-gray-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
          />
        </svg>

        <h3 class="mt-2 text-sm font-medium text-gray-900">
          No books found
        </h3>

        <p class="mt-1 text-sm text-gray-500">
          <% if params[:search].present? || params[:category].present? || params[:rating].present? %>
            Try adjusting your filters or search terms.
          <% else %>
            Get started by adding your first book.
          <% end %>
        </p>

        <div class="mt-6">
          <%= link_to new_admin_book_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4v16m8-8H4"
              />
            </svg>
            Add Book
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
