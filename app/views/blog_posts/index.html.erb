<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Page Title -->
  <div class="mb-12">
    <h1 class="text-5xl md:text-6xl font-bold text-black mb-4">
      ✍️ Blog
    </h1>
    <p class="text-xl text-black font-semibold">
      Thoughts on development, fitness, and building products. Lessons learned and insights gained along the way.
    </p>
  </div>

  <!-- Search & Filters -->
  <div class="mb-12">
    <div class="flex flex-col md:flex-row gap-4">
      <!-- Search Form -->
      <%= form_with url: blog_path, method: :get, class: "flex-1" do %>
        <div class="relative">
          <input
            type="text"
            name="query"
            value="<%= params[:query] %>"
            placeholder="Search posts..."
            autocomplete="off"
            class="w-full px-4 py-3 bg-eggwhite border-2 border-black text-black placeholder-gray-600 focus:outline-none font-semibold"
          >
          <button
            type="submit"
            class="absolute right-2 top-1/2 -translate-y-1/2 px-4 py-2 bg-black text-eggwhite border-2 border-black text-sm font-bold hover:bg-gray-800"
          >
            Search
          </button>
        </div>
      <% end %>

      <!-- Year Filter -->
      <% if @years.any? %>
        <div class="flex gap-2 flex-wrap">
          <%= link_to "All", blog_path, class: "px-4 py-3 font-bold border-2 border-black #{params[:year].nil? ? 'bg-black text-eggwhite' : 'bg-eggwhite text-black hover:bg-black hover:text-eggwhite'}" %>

          <% @years.each do |year| %>
            <%= link_to year, blog_path(year: year), class: "px-4 py-3 font-bold border-2 border-black #{params[:year].to_i == year ? 'bg-black text-eggwhite' : 'bg-eggwhite text-black hover:bg-black hover:text-eggwhite'}" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Featured Posts -->
  <% if @featured_posts.any? && params[:query].nil? && params[:year].nil? %>
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-black mb-8 border-b-2 border-black pb-3">⭐ Featured</h2>

      <div class="grid grid-cols-1 gap-6">
        <% @featured_posts.each do |post| %>
          <%= link_to blog_post_path(post.slug), class: "block bg-yellow-200 border-2 border-black p-6 hover:bg-yellow-300" do %>
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <div class="flex items-center flex-wrap gap-3 mb-2">
                  <span class="px-2 py-1 bg-black text-eggwhite text-xs font-bold uppercase border-2 border-black">
                    Featured
                  </span>

                  <p class="text-sm text-black font-semibold">
                    <%= post.formatted_published_date %>
                  </p>

                  <% if post.viral? %>
                    <span class="px-2 py-1 bg-pink-300 text-black text-xs font-bold uppercase border-2 border-black">
                      Viral
                    </span>
                  <% end %>

                  <span class="text-black text-xs font-semibold">
                    <%= post.reading_time_text %>
                  </span>
                </div>

                <h3 class="text-2xl font-bold text-black mb-2">
                  <%= post.title %>
                </h3>

                <p class="text-black mb-3 font-semibold"><%= post.short_excerpt(200) %></p>

                <div class="flex items-center text-sm text-black font-bold">
                  <span><%= post.views_count %> views</span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- All Posts -->
  <section>
    <h2 class="text-3xl font-bold text-black mb-8 border-b-2 border-black pb-3">
      <% if params[:query].present? %>
        Search Results for "<%= params[:query] %>"
      <% elsif params[:year].present? %>
        Posts from <%= params[:year] %>
      <% else %>
        All Posts
      <% end %>
    </h2>

    <% if @blog_posts.any? %>
      <div class="space-y-6">
        <% @blog_posts.each do |post| %>
          <%= link_to blog_post_path(post.slug), class: "block bg-eggwhite border-2 border-black p-6 hover:bg-eggwhite-dark" do %>
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center flex-wrap gap-3 mb-2">
                  <p class="text-sm text-black font-semibold">
                    <%= post.formatted_published_date %>
                  </p>

                  <% if post.viral? %>
                    <span class="px-2 py-1 bg-pink-300 text-black text-xs font-bold uppercase border-2 border-black">
                      Viral
                    </span>
                  <% end %>

                  <% if post.featured? %>
                    <span class="px-2 py-1 bg-yellow-300 text-black text-xs font-bold uppercase border-2 border-black">
                      Featured
                    </span>
                  <% end %>

                  <span class="text-black text-xs font-semibold">
                    <%= post.reading_time_text %>
                  </span>
                </div>

                <h3 class="text-xl font-bold text-black mb-2">
                  <%= post.title %>
                </h3>

                <p class="text-black text-sm mb-3 font-semibold">
                  <%= post.short_excerpt %>
                </p>

                <div class="flex items-center text-sm text-black font-bold">
                  <span><%= post.views_count %> views</span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-eggwhite border-2 border-black p-12 text-center">
        <p class="text-black text-lg font-bold mb-4">No posts found.</p>

        <% if params[:query].present? || params[:year].present? %>
          <%= link_to "View All Posts", blog_path, class: "inline-block text-black hover:underline font-bold border-2 border-black px-4 py-2 bg-eggwhite hover:bg-black hover:text-eggwhite" %>
        <% end %>
      </div>
    <% end %>
  </section>

  <!-- Stats -->
  <% if params[:query].nil? && params[:year].nil? %>
    <aside class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Total Posts -->
      <div class="bg-eggwhite border-2 border-black p-6 text-center hover:bg-eggwhite-dark">
        <p class="text-4xl font-bold text-black">
          <%= BlogPost.published.count %>
        </p>
        <p class="text-black text-sm mt-2 font-semibold">Total Posts</p>
      </div>

      <!-- Viral Posts -->
      <div class="bg-eggwhite border-2 border-black p-6 text-center hover:bg-eggwhite-dark">
        <p class="text-4xl font-bold text-black">
          <%= BlogPost.viral.count %>
        </p>
        <p class="text-black text-sm mt-2 font-semibold">Viral Posts</p>
      </div>

      <!-- Total Views -->
      <div class="bg-eggwhite border-2 border-black p-6 text-center hover:bg-eggwhite-dark">
        <p class="text-4xl font-bold text-black">
          <%= number_with_delimiter(BlogPost.sum(:views_count)) %>
        </p>
        <p class="text-black text-sm mt-2 font-semibold">Total Views</p>
      </div>
    </aside>
  <% end %>
</div>
