<!-- Homepage Content (Sidebar is now in layout) -->
<div class="flex-1 overflow-y-auto bg-eggwhite">
  <div class="mx-auto px-8 py-16">
    <!-- Hero Section -->
    <div class="h-screen mb-16">
      <!-- Greeting -->
      <p class="text-black text-lg mb-4 font-semibold">üëã Hi, I'm</p>

      <!-- Name -->
      <h1 class="text-6xl md:text-7xl font-bold mb-6 text-black">
        Andre Teodoro
      </h1>

      <!-- Roles -->
      <div class="text-3xl md:text-4xl font-semibold text-black mb-6">
        <p class="mb-2">Developer</p>
        <p class="mb-2">Creator</p>
        <p>Educator</p>
      </div>

      <!-- Bio -->
      <p class="text-xl text-black max-w-2xl mb-8 leading-relaxed font-semibold">
        I build products, teach others how to ship, and share everything I learn along the way. Based in the cloud, shipping to the world.
      </p>
    </div>

    <!-- Sports Section -->
    <div class="mb-16">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-black">Sports & Fitness</h2>
        <%= link_to "View All ‚Üí", sports_path, class: "text-black hover:underline font-bold text-sm border-2 border-black px-3 py-1 bg-eggwhite hover:bg-black hover:text-eggwhite" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- CrossFit -->
        <div class="bg-eggwhite border-3 border-black p-6 hover:bg-eggwhite-dark">
          <h3 class="text-lg font-bold text-black mb-4 flex items-center">
            <span class="text-2xl mr-2">üèãÔ∏è</span> CrossFit
          </h3>
          <div class="space-y-2">
            <% if @crossfit_benchmarks.any? %>
              <% @crossfit_benchmarks.first(2).each do |activity| %>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-black"><%= activity.title %></span>
                  <span class="text-black font-bold"><%= activity.formatted_value %></span>
                </div>
              <% end %>
            <% else %>
              <p class="text-black text-sm">No benchmarks yet</p>
            <% end %>
          </div>
        </div>

        <!-- Hyrox -->
        <div class="bg-eggwhite border-3 border-black p-6 hover:bg-eggwhite-dark">
          <h3 class="text-lg font-bold text-black mb-4 flex items-center">
            <span class="text-2xl mr-2">‚ö°</span> Hyrox
          </h3>
          <div class="space-y-2">
            <% if @hyrox_benchmarks.any? %>
              <% @hyrox_benchmarks.first(2).each do |activity| %>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-black"><%= activity.title %></span>
                  <span class="text-black font-bold"><%= activity.formatted_value %></span>
                </div>
              <% end %>
            <% else %>
              <p class="text-black text-sm">No benchmarks yet</p>
            <% end %>
          </div>
        </div>

        <!-- Running -->
        <div class="bg-eggwhite border-3 border-black p-6 hover:bg-eggwhite-dark">
          <h3 class="text-lg font-bold text-black mb-4 flex items-center">
            <span class="text-2xl mr-2">üèÉ</span> Running
          </h3>
          <div class="space-y-2">
            <% if @running_benchmarks.any? %>
              <% @running_benchmarks.first(2).each do |activity| %>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-black"><%= activity.title %></span>
                  <span class="text-black font-bold"><%= activity.formatted_value %></span>
                </div>
              <% end %>
            <% else %>
              <p class="text-black text-sm">No benchmarks yet</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Books Section -->
    <div class="mb-16">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-black">Currently Reading</h2>
        <%= link_to "View All ‚Üí", books_path, class: "text-black hover:underline font-bold text-sm border-2 border-black px-3 py-1 bg-eggwhite hover:bg-black hover:text-eggwhite" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% @featured_books.each do |book| %>
          <div class="bg-eggwhite border-3 border-black p-6 hover:bg-eggwhite-dark">
            <h3 class="text-base font-bold text-black mb-2"><%= book.title %></h3>
            <p class="text-black text-sm mb-3 font-semibold">by <%= book.author %></p>
            <% if book.rating %>
              <div class="flex items-center mb-3">
                <span class="text-yellow-500 text-sm"><%= book.star_rating %></span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Gear Section -->
    <div class="mb-16">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-black">Favorite Gear</h2>
        <%= link_to "View All ‚Üí", gear_index_path, class: "text-black hover:underline font-bold text-sm border-2 border-black px-3 py-1 bg-eggwhite hover:bg-black hover:text-eggwhite" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% @featured_gear.first(4).each do |item| %>
          <div class="bg-eggwhite border-3 border-black p-6 hover:bg-eggwhite-dark">
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <h3 class="text-base font-bold text-black mb-2"><%= item.name %></h3>
                <span class="inline-block px-2 py-1 bg-black text-eggwhite text-xs font-bold mb-3 border-2 border-black">
                  <%= item.category_display_name %>
                </span>
              </div>
              <% if item.price %>
                <p class="text-black font-bold text-sm"><%= item.formatted_price %></p>
              <% end %>
            </div>
            <p class="text-black text-sm"><%= item.short_description %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
